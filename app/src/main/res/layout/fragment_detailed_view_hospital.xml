<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="30dp"
    tools:context=".DetailedViewHospitalFragment">

    <LinearLayout
        android:id="@+id/linear_disp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:src="@drawable/small_cicle"
        android:id="@+id/hospitalicon"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hospitalnme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="markhamhospital" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="5 km" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.3 rating" />


    </LinearLayout>



    </LinearLayout>
    <TextView
        android:layout_below="@id/linear_disp"
        android:id="@+id/textridedetail"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Details :"
        android:textSize="30sp"
        android:paddingTop="20dp"/>
    <TextView
    android:layout_below="@id/textridedetail"
    android:id="@+id/distancefromloc"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Distance from location  :"
    android:textSize="20sp"
    android:paddingTop="50dp"/>
    <TextView
        android:layout_below="@id/distancefromloc"
        android:id="@+id/editkmdistance"
        android:layout_width="match_parent"
        android:height="30dp"
        android:layout_height="30dp"
        android:text="40 km"

        android:layout_marginTop="30dp" />

    <TextView
        android:layout_below="@id/editkmdistance"
        android:id="@+id/textpricedetail"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance from location  :"
        android:textSize="20sp"
        android:paddingTop="30dp"/>
    <TextView
        android:layout_below="@id/textpricedetail"
        android:id="@+id/editpricedistance"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:height="30dp"
        android:text="40 $"


        android:layout_marginTop="30dp"/>


<Button
    android:layout_below="@id/editpricedistance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Book Ride"
    android:id="@+id/bookRide"
    />

</RelativeLayout>