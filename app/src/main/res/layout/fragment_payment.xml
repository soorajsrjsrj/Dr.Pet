<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".33">

                <RelativeLayout
                    android:id="@+id/card_preview_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/card_preview_cvc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/hide_cvc"
                            android:layout_weight=".1"
                            android:hint="CCV"
                            android:text="CCV"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white" />

                        <View
                            android:id="@+id/hide_cvc"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight=".47" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card_preview_front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="217dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="17dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/bgclrs" />

                    <TextView
                        android:id="@+id/card_preview_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="52dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginBottom="19dp"
                        android:hint="Name Of Card"
                        android:textAllCaps="true"
                        android:textColor="#0C0A0A"
                        android:textColorHint="#151111" />

                    <TextView
                        android:id="@+id/card_preview_type"
                        android:layout_width="59dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="36dp"
                        android:layout_marginBottom="8dp"
                        android:text="VISA"
                        android:textAllCaps="true"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/card_preview_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:gravity="top|center_horizontal"
                        android:hint="XXXX XXXX XXXX XXXX"
                        android:textAllCaps="true"
                        android:textColor="@android:color/primary_text_light_nodisable"
                        android:textColorHint="@android:color/primary_text_light_nodisable"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="214dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/card_preview_name"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="52dp"
                        android:layout_marginEnd="-61dp"
                        android:layout_marginBottom="17dp"
                        android:layout_toStartOf="@+id/card_preview_expiry"
                        android:text="EXPIRATION END OF "
                        android:textColor="#0C0C0C" />

                    <TextView
                        android:id="@+id/card_preview_expiry"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="121dp"
                        android:layout_marginRight="121dp"
                        android:layout_marginBottom="55dp"
                        android:hint="Expiry Date"
                        android:textAllCaps="true"
                        android:textColor="#050505"
                        android:textColorHint="#100E0E" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="32dp"
                        android:layout_height="28dp"
                        android:layout_above="@+id/card_preview_number"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="194dp"
                        android:layout_marginEnd="61dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toEndOf="@+id/imageView"
                        app:srcCompat="@drawable/wifi" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="96dp"
                        android:layout_height="74dp"
                        android:layout_above="@+id/card_preview_number"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="26dp"
                        android:layout_marginBottom="-10dp"
                        app:srcCompat="@drawable/cardchip" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7">

                <TextView
                    android:id="@+id/payment_amount_holder2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_pay"
                    android:layout_alignParentStart="true"

                    android:layout_marginStart="59dp"
                    android:layout_marginBottom="22dp"
                    android:fontFamily="sans-serif"
                    android:text="Rememebr my card "
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="56dp"
                    android:background="@drawable/blue_border_rounded_cornwe1"
                    android:padding="5dp"
                    android:text="ADD PAYMENT"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:id="@+id/card_number1"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_below="@+id/card_name"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="-287dp">

                    <LinearLayout
                        android:id="@+id/expiry_date_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="-223dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="195dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <com.santalu.maskedittext.MaskEditText
                        android:id="@+id/card_number"
                        android:layout_width="400dp"
                        android:layout_height="41dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginBottom="197dp"
                        android:background="@drawable/blue_border_rounded_cornwe"
                        android:hint="Card Number"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        app:met_mask="#### #### #### ####" />
                </LinearLayout>

                <EditText
                    android:id="@+id/card_name"
                    android:layout_width="396dp"
                    android:layout_height="41dp"
                    android:layout_below="@+id/payment_amount_layout"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:hint="Name on Card"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="15dp" />

                <LinearLayout
                    android:id="@+id/payment_amount_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="168dp"
                    android:layout_marginRight="168dp"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/payment_amount_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Enter your card details below"

                        android:textSize="17sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/payment_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/card_name"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="111dp"
                    android:layout_marginLeft="111dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="$00.00"
                    android:textSize="22sp" />

                <com.santalu.maskedittext.MaskEditText
                    android:id="@+id/expiry_date"
                    android:layout_width="305dp"
                    android:layout_height="41dp"
                    android:layout_above="@+id/payment_amount_holder2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginBottom="41dp"
                    android:layout_weight=".50"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:hint="Expiry Date"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    app:met_mask="##/##"/>

                <EditText
                    android:id="@+id/cvc"
                    android:layout_width="92dp"
                    android:layout_height="41dp"
                    android:layout_above="@+id/checkBox"

                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="41dp"
                    android:layout_weight=".45"
                    android:background="@drawable/blue_border_rounded_cornwe"
                    android:hint="CCV"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:paddingLeft="15dp" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_pay"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="45dp"
                    android:layout_marginBottom="13dp" />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30sp" />

</LinearLayout>